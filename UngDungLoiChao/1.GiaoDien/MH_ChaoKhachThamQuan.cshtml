@{
    var DanhSachNhomHang = XL_LUUTRU.DocDanhSachNhomHang();
    //Bien nhap lieu: khong co
    string LoiChao = "";
    string chuoiHTML = "";

    //Xu ly nghiep vu:
    LoiChao = XL_NGHIEPVU.TaoLoiChaoKhachThamQuan();

    //Xu ly giao dien:
    var BoPhatSinh = new Random();
    var n = BoPhatSinh.Next(0, 5);
    string chuoiHTML_LoiChao = "<div class='btn'> " + LoiChao + "<br/> Đây là Ứ ng dụng Web <b>dành riêng cho Xử lý nghiệp vụ</b> của tôi <br/>";
    string chuoiHTML_HinhAnh = "<img src='../Media/Khach_tham_quan_" + n + ".png' width='150' height='150'> <br/>";
    string chuoiHTML_DanhSachNhomHang = "<div class='btn'> Danh sách các Nhóm hàng hiện nay";
    DanhSachNhomHang.ForEach(NhomHang =>
    {
        chuoiHTML_DanhSachNhomHang += "<div class='btn'> <img src='../Media/"
        + NhomHang.MaSo + ".png' width='50' height='50'>" + "<br/> " + NhomHang.Ten + "</div>";
    });
    chuoiHTML_DanhSachNhomHang += "</div>";
    chuoiHTML = chuoiHTML_HinhAnh + chuoiHTML_LoiChao + chuoiHTML_DanhSachNhomHang;

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">

</head>

<body style="font-family:Arial">
    <div class="container-fluid">
        @Html.Raw(chuoiHTML)
    </div>
</body>
</html>
