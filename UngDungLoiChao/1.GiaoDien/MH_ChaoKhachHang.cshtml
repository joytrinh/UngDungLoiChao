@{
    var DanhSachNhomHang = XL_LUUTRU.DocDanhSachNhomHang();

    var KhachHang = new XL_KhachHang();//Bien nhap lieu + ket qua
    string chuoiHTML = "";
    if (IsPost)
    {
        KhachHang.HoTen = Request["HoTen"];
        var HopLe = KhachHang.HoTen.Trim() != null;
        if (HopLe)
        {
            //Xu ly giao dien: tao chuoi HTML
            var chuoiHTML_KhachHang = XL_THEHIEN.TaoChuoiHTMLKhachHang(KhachHang);
            string chuoiHTML_DanhSachNhomHang = XL_THEHIEN.TaoChuoiHTMLDanhSachNhomHang(DanhSachNhomHang);
            chuoiHTML = chuoiHTML_KhachHang + chuoiHTML_DanhSachNhomHang;
        }
        else
        {
            chuoiHTML = "<div>" + "Xin vui lòng Nhập Họ tên khác trống" + "<br/> Click đồng ý => Nếu hợp lệ ứng dụng sẽ chào anh/chị" + "<div>";//Xử lý giao diện: kết xuất chuỗi HTML
        }
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">

</head>

<body style="font-family:Arial">
    <form method="post">
        <div class="container-fluid">
            <div>
                <input type="text" name="HoTen" placeholder="Vui lòng nhập họ tên" required />
                <button class="btn btn-danger" type="submit">Đồng ý</button>
            </div>
            @Html.Raw(chuoiHTML)
        </div>
    </form>
</body>
</html>
